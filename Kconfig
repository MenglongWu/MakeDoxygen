mainmenu "MakeDoxygen"

menu "Project"
config GIT_SHA1
	bool "enable git sha1 node id"
	default n
	help
	  macro __GIT_SHA1__ get ID
config USE_GCH
	bool "Support precompile"
	default y

config PRECOMPILE_AUTOCONFIG_H
	depends on USE_GCH
	bool "add autoconfig.h.gch"
	default y

config PRECOMPILE_AUTOCONFIG_HPP
	depends on USE_GCH
	bool "add autoconfig++.h.gch"
	default n

	
endmenu

menu "library libla.so"
config USE_LA_FUN1
	bool "libla"
	default y


config USE_LA_PART2
	bool "la part2"

config USE_LA_FUN3
	bool "la fun3"


config LA_FUN1_STR
	string "libla fun1 string" 
	default "1. I'm fun1() from libla.so"
	default "2. I'm fun1() from libla.so"
	default "3. I'm fun1() from libla.so"

config LA_FUN2_STR
	string "libla fun2 string" 
	option la_fun2_list
	default "1. I'm fun2() from libla.so"

endmenu


menu "library liblb.so"
config USE_LB_FUN1
	bool "liblb"
	default y

config USE_LB_PART2
	bool "lb part2"

config USE_LB_FUN3
	bool "lb fun3"		

config LB_FUN1_STR
	string "liblb fun1 string" 
	option lb_fun1_list
	default "1. I'm fun1() from liblb.so"
	default "2. I'm fun1() from liblb.so"
	default "3. I'm fun1() from liblb.so"
		
config LB_FUN2_STR
	string "liblb fun2 string" 
	option lb_fun2_list
	default "1. I'm fun2() from liblb.so"
	default "2. I'm fun2() from liblb.so"
	default "3. I'm fun2() from liblb.so"

endmenu

